
@{
    ViewBag.Title = "Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Empresa</a></li>
    <li class="breadcrumb-item active">Compras</li>
</ol>

<div class="card bg-dark text-white custom-card mb-4">
    <div class="card-header">
        <i class="fas fa-duotone fa-dolly"></i>
        Pedidos
    </div>
    <div class="card-body">
        <div class="row">
            <table id="tablaCompras" class="table" style="width: 100%">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>N°Compra</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th>Repre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-success">
                </tbody>
            </table>
        </div>
    </div>

    <!--DatosCompras-->
    <div class="modal" id="modalCompra" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-dismiss="static">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        <i class="fas fa-clipboard"></i>
                        Detalle de la compra
                    </h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="mb-3 text-center">
                            <label for="text" class="form-label">N°:</label>
                            <label for="text" class="form-label" id="numeroCompra"></label>
                        </div>
                        <div class="col">

                            <div class="mb-3">
                                <label for="text" class="form-label">Nombres:</label>
                                <input type="text" class="form-control" id="txtNombre" placeholder="Digite el nombre" name="txtNombre">
                            </div>
                            <div class="mb-3">
                                <label for="text" class="form-label">Apellidos:</label>
                                <input type="text" class="form-control" id="txtApellido" placeholder="Digite los apellidos" name="txtApellido">
                            </div>
                            <div class="mb-3">
                                <label for="text" class="form-label">Telefono:</label>
                                <input type="text" class="form-control" id="txtTell" placeholder="Digite los apellidos" name="txtTell">
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label for="email" class="form-label">Correo:</label>
                                <input type="email" class="form-control" id="txtCorreo" placeholder="Digite el correo" name="txtCorreo">
                            </div>
                            <div class="mb-3">
                                <label for="text" class="form-label">Direccion:</label>
                                <input type="text" class="form-control" id="txtDireccion" placeholder="Digite el correo" name="txtDireccion">
                            </div>
                            <div class="mb-3">
                                <label for="text" class="form-label">Estado:</label>
                                <select id="btsEstado" class="form-select" aria-label="Default select example">
                                    <option disabled>Seleccione una opcion</option>
                                    <option value="0">Activo</option>
                                    <option value="1">No activo</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="text" class="form-label">Tipo Usuario:</label>
                                <select id="btsTipoUsuario" class="form-select" aria-label="Default select example">
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="text" class="form-label">Ciudad:</label>
                                <select id="btsCiudad" class="form-select" aria-label="Default select example">
                                </select>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


   
    @section scripts{
        <script src="~/Scripts/Js/CtCompra.js"></script>
    }

</div>